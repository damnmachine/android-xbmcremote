<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/setup_wizard_login" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="15dip">
		<TextView android:id="@+id/TextView01" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_marginTop="25dip" 
			android:text="Username"></TextView>
		<EditText android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:id="@+id/setup_wizard_username" 
			android:text="xbmc"></EditText>
		<TextView android:id="@+id/TextView02" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:text="Password"></TextView>
		<EditText android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:id="@+id/setup_wizard_password" android:inputType="textPassword|textVisiblePassword" android:text="xbmc"></EditText>
<TextView android:id="@+id/TextView03" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text='Once you entered your username and password click on "Test login" to proceed.' android:layout_marginTop="25dip"></TextView><Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Test login" android:id="@+id/setup_wizard_test_login"></Button>

</LinearLayout>