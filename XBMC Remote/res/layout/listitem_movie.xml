<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/listitem_bg" >
	<ImageView 
		android:id="@+id/listitem_image" 
		android:layout_width="50dip"
		android:layout_height="74dip"
		android:adjustViewBounds="false"
		android:cropToPadding="false" 
		android:padding="0dip" android:layout_margin="0dip" 
		android:src="@drawable/icon_album_grey" 
		android:scaleType="center" />
	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:paddingLeft="5dip" 
		android:paddingTop="5dip" 
		android:orientation="vertical">
		<TextView 
			android:id="@+id/listitem_title" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:text="Title" 
			android:textSize="18dip" 
			android:textColor="@drawable/listitem_title" 
			android:ellipsize="end" 
			android:marqueeRepeatLimit="1" 
			android:lines="1" 
			android:scrollHorizontally="true" />
		<LinearLayout 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:orientation="horizontal" 
				android:layout_gravity="fill_horizontal">
			<TextView 
				android:id="@+id/listitem_subtitle" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textSize="12dip"
				android:textColor="@drawable/listitem_subtitle" 
				android:layout_gravity="left" 
				android:lines="1" />
			<TextView 
				android:id="@+id/listitem_subtitle_right" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:textSize="12dip"
				android:textColor="@drawable/listitem_subtitle" 
				android:layout_gravity="right" 
				android:gravity="right" 
				android:lines="1" 
				android:paddingRight="8dip"/>
		</LinearLayout>	
		<LinearLayout 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:orientation="horizontal" 
				android:layout_gravity="fill_horizontal">
			<TextView 
				android:id="@+id/listitem_bottom_line" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textSize="12dip"
				android:textColor="@drawable/listitem_subtitle" 
				android:layout_gravity="left" 
				android:lines="1" />
			<TextView 
				android:id="@+id/listitem_bottom_right" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:textSize="18dip"
				android:textStyle="bold"
				android:textColor="#44000000"
				android:layout_gravity="right" 
				android:gravity="right" 
				android:lines="1" 
				android:paddingRight="8dip"/>
		</LinearLayout>	
	</LinearLayout>
</LinearLayout>